" 1.2 (created: 2008/08/16 18:51:52)
" many changed at 2009/03/03 for 2.0b2pre

" Mappings
set titlestring=Firefox

" Options
"set guioptions=BTrb
set guioptions=Brb

" Abbreviations
source! ~/.vimperatorrc.local
" vim: set ft=vimperator:

"色
"colorscheme mac

"ビープ音を鳴らさずビジュアルベルを使用
set visualbell
"ビジュアルベルを無効化
set visualbellstyle=display:none;

"j/kの移動量を3倍に
map j 3<C-e>
map k 3<C-y>
"<BS>で「戻る」
map <BS> H

"h/lでタブ移動
noremap h <C-p>
noremap l <C-n>

"ページ全体で検索語を強調表示
set hlsearch

" quickmark
qmark g http://gmail.com
qmark r http://www.google.com/reader/view/
qmark f http://fastladder.com/reader/
qmark a http://www.amazon.co.jp/
qmark h http://www.google.com/history/?hl=ja
qmark d http://d.hatena.ne.jp/goryugo/
qmark c http://www.drk7.jp/pub/js/cpanmala/
qmark l http://reader.livedoor.com/reader/

" コマンドモードでの操作
cmap <C-n> <Tab>
cmap <C-p> <S-Tab>
cmap <C-f> <Right>
cmap <C-b> <Left>

" Alt+↑/↓でメニューの表示/非表示
map <A-Down> :set guioptions+=BTrb<CR>
map <A-Up> :set guioptions-=rb<CR>

" Exコマンドと検索パターン履歴の記録数
set history=10000

" ex mode でインクリメント補完
set wildoptions=auto

